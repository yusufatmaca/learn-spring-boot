<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="dataProvider" class="com.loose.coupling.UserDatabaseProvider">
        <property name="name"  value="Yusuf" />
        <property name="surname" value="Atmaca" />
    </bean>

    <bean id="userManagerWithDB" class="com.loose.coupling.UserManager">
        <constructor-arg ref="dataProvider" />
    </bean>
</beans>